<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.YumYum" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/heavy_metal</item>
        <item name="colorSecondary">@color/mystic</item>
    </style>

    <style name="screenbackground">
        <item name="android:background">@color/heavy_metal</item>
        <item name="android:backgroundTint">@color/heavy_metal</item>
    </style>

    <style name="mealCardbackground">
        <item name="android:background">@color/black</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="textcolor">
        <item name="android:textColor">@color/mystic</item>
    </style>

    <style name="YamYamTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/gold_drop</item>
        <item name="hintTextColor">@color/mystic</item>
        <item name="android:textColorHint">@color/mystic</item>
        <item name="startIconTint">@color/mystic</item>
        <item name="fontFamily">@font/meditative</item>
        <item name="endIconTint">@color/mystic</item>
        <item name="textFillColor">@color/mystic</item>
        <item name="cursorColor">@color/mystic</item>
    </style>

    <style name="CustomToolbarStyle" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:background">@color/heavy_metal</item> <!-- White background -->
        <item name="android:textColor">@color/mystic</item> <!-- Black text color -->
        <item name="actionOverflowButtonStyle">@style/CustomOverflowMenu</item> <!-- Custom overflow menu style -->
    </style>

    <style name="bottomnav" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/heavy_metal</item>
    </style>

    <style name="ingredientItemColor">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="PopupMenuLight" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:textColor">@color/gold_drop</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/heavy_metal</item>
    </style>
</resources>