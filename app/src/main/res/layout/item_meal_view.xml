<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    style="@style/mealCardbackground"
    android:elevation="4dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgSearched"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:contentDescription="favorite_image"/>

        <ImageView
            android:id="@+id/imgFavoriteIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:src="@drawable/baseline_favorite_border_24"
            app:tint="@color/gold_drop" />

        <TextView
            android:id="@+id/tvSearchedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginEnd="8dp"
            style="@style/textcolor"
            android:layout_toStartOf="@+id/imgFavoriteIcon"
            android:layout_toEndOf="@+id/imgSearched"
            android:layout_toRightOf="@id/imgSearched"
            android:text="@string/title"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>

