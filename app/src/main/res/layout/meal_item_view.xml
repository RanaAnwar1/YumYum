<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:backgroundTint="@color/mystic"
    app:cardCornerRadius="20dp">


    <ImageView
        android:id="@+id/meal_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/empty"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/black_gradiant" />

    <TextView
        android:id="@+id/meal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/gray_nurse"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/meditative"
        android:text="tortellini walking into prom"
        android:textSize="@dimen/button_text" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/meal_fav_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:layout_marginEnd="332dp"
        android:backgroundTint="@color/mystic"
        android:contentDescription="@string/fav_button_description"
        android:src="@drawable/baseline_favorite_border_24"
        app:fabCustomSize="35dp"
        app:maxImageSize="25dp"
        app:tint="@color/gold_drop" />



</androidx.cardview.widget.CardView>